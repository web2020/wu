/* pages/My_FB/My_FB.wxss */
.My_FB{
  text-align:center;
  font-size:80rpx;
  background-color:rgba(245, 110, 110, 0.829);
  margin-bottom:48rpx;
  box-shadow: 0px 20rpx 20rpx rgba(245, 110, 110, 0.829);
  color:#fff;
}
.u_info{
  vertical-align: middle;
  color:#888;
  display: flex;
}
.user_tx{
  width:48rpx;
  height:48rpx;
  border-radius:50%;
  margin:0 12rpx 0 40rpx;
}
.user_name{
  font-size:36rpx;
  line-height: 48rpx;
}
.content{
  display:flex;
  justify-content: space-between;
  border-bottom:1rpx solid #ddd;
  padding:0 40rpx;
  color:#888;
}
.msg{
  font-size:48rpx;
  line-height: 100rpx;
}
.images{
  width:100rpx;
  height:100rpx;
  border-radius:15rpx;
}
.re{
  position: absolute;
}