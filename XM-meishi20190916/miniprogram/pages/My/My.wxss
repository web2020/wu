/* pages/My/My.wxss */
.user_xx{
  text-align:center;
  height:400rpx;
  background-color:rgb(245, 110, 110);
  border-top-left-radius:35rpx;
  border-top-right-radius:35rpx;
  margin-bottom: 25rpx;
  position: relative;
  color:#fff;
  font-size:40rpx;
  box-shadow: 0px 20rpx 20rpx rgba(245, 110, 110, 0.829); 
}
.user_tx{
  border-radius:50%;
  border:6rpx solid #ccc;
  margin:50rpx auto;
  width:200rpx;height:200rpx;
  display:block;
  position: absolute;
  top:50%;
  left:50%;
  margin-top:-100rpx;
  margin-left:-100rpx;
}
.user_xx>.user_name{
  position:relative;
  top:80%;
}
.My_cz{
  background-color:#eee;
  color:#888;
}
.My_cz view{
  padding:30rpx;
  font-size:36rpx;
  border-bottom: 1rpx solid rgb(216, 213, 213);
}
.btn{
  border-bottom-left-radius: 35rpx;
  border-bottom-right-radius: 35rpx;
  background-color:rgb(245, 110, 110);
  font-size:36rpx;
  color:#fff;
}